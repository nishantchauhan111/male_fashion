
    <!-- Hero Section Begin -->
    <section class="hero">
        <div class="hero__slider owl-carousel">
            <div class="hero__items set-bg" data-setbg="<%= image_path 'hero/hero-1.jpg' %>">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">
                            <div class="hero__text">
                                <h6><%= t("home.summer_coll")%></h6>
                                <h2><%= t("home.winter_coll")%></h2>
                                <p><%= t("home.add")%></p>
                                <a  class="primary-btn"  <%= link_to t("footer.shopping"), products_path %>></a> 
                                <div class="hero__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                    <a href="#"><i class="fa fa-instagram"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="hero__items set-bg" data-setbg="<%= image_path "hero/hero-2.jpg" %>">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">
                            <div class="hero__text">
                                <h6><%= t("home.summer_coll")%></h6>
                                <h2><%= t("home.winter_coll")%></h2>
                                <p><%= t("home.add")%></p>
                                <a  class="primary-btn" <%= link_to t("footer.shopping"), products_path %>></a> 
                                <div class="hero__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                    <a href="#"><i class="fa fa-instagram"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->

    <!-- Banner Section Begin -->
    <section class="banner spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 offset-lg-4">
                    <div class="banner__item">
                        <div class="banner__item__pic">
                            <%= image_tag "banner/banner-1.jpg" %>
                        </div>
                        <div class="banner__item__text">
                            <h2><%= t("home.clothe_coll")%></h2>
                            <a href="#"><%= t("footer.shopping")%></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="banner__item banner__item--middle">
                        <div class="banner__item__pic">
                            <%= image_tag "banner/banner-2.jpg" %>
                        </div>
                        <div class="banner__item__text">
                            <h2><%= t("home.accessories")%></h2>
                            <a href="#"><%= t("footer.shopping")%></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="banner__item banner__item--last">
                        <div class="banner__item__pic">
                            <%= image_tag "banner/banner-3.jpg" %>
                        </div>
                        <div class="banner__item__text">
                            <h2><%= t("home.shoe_coll")%></h2>
                            <a href="#"><%= t("footer.shopping")%></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Banner Section End -->

    <!-- Product Section Begin -->
     
    <section class="product spad">
        
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        <li class="active" data-filter="*"><%= t("home.best_seller")%></li>
                        <li data-filter=".new-arrivals"><%= t("home.new_arrival")%></li>
                        <li data-filter=".hot-sales"><%= t("home.hot_sale")%></li>
                    </ul>
                </div>
            </div>
            <% @products.each do |product| %>
            <div class="container">
            <div class="row product__filter">
                <div class="col-lg-6 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                    <div class="product__item">
                   
                        <div class="product__item__pic " >
                        <%= image_tag product.image %>
                            <span class="label">New</span>
                            <ul class="product__hover">
                                <li><a href="#"><%= image_tag "icon/heart.png" %></a></li>
                                <li><a href="#"><%= image_tag "icon/search.png" %></a></li>
                                <li><a href="#"><%= image_tag "icon/compare.png" %> <span>Compare</span></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6><%= product.name %></h6>
                            <a href="#" class="add-cart"><%= link_to "Show this product", product %></a>
                            <div class="rating">
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                            </div>
                            <h5><%= number_to_currency(product.price) %></h5>
                            <div class="product__color__select">
                                <label for="pc-1">
                                    <input type="radio" id="pc-1">
                                </label>
                                <label class="active black" for="pc-2">
                                    <input type="radio" id="pc-2">
                                </label>
                                <label class="grey" for="pc-3">
                                    <input type="radio" id="pc-3">
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% end %>   
                </div>
            </div>
        </div>
    </section>

    <!-- Product Section End -->

    <!-- Categories Section Begin -->
    <section class="categories spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="categories__text">
                        <h2><%= t("home.cloth_add")%> <br /> <span><%= t("home.shoe_ad")%></span> <br /> <%= t("footer.accessories")%></h2>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="categories__hot__deal">
                        <%= image_tag "product-sale.png"%>
                         <div class="hot__deal__sticker">
                            <span>Sale Of</span>
                            <h5>$29.99</h5>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 offset-lg-1">
                    <div class="categories__deal__countdown">
                        <span><%= t("home.deal_of")%></span>
                        <h2>Multi-pocket Chest Bag Black</h2>
                        <div class="categories__deal__countdown__timer" id="countdown">
                            <div class="cd-item">
                                <span>3</span>
                                <p><%= t("home.day") %></p>
                            </div>
                            <div class="cd-item">
                                <span>1</span>
                                <p><%= t("home.hours") %></p>
                            </div>
                            <div class="cd-item">
                                <span>50</span>
                                <p><%= t("home.minutes") %></p>
                            </div> 
                            <div class="cd-item">
                                <span>18</span>
                                <p><%= t("home.second") %></p>
                            </div>
                        </div>
                        <a href="#" class="primary-btn"><%= t("home.shop_now")%></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Categories Section End -->

