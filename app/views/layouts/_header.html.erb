<!-- Page Preloder -->
<div id="preloder">
    <div class="loader"></div>
</div>

    <!-- Offcanvas Menu Begin -->
<div class="offcanvas-menu-overlay"></div>
<div class="offcanvas-menu-wrapper">
    <div class="offcanvas__option">
        <div class="offcanvas__links">
            <a href="#">Sign in</a>
            <a href="#">FAQs</a>
        </div>
        <div class="offcanvas__top__hover">
            <span>Usd <i class="arrow_carrot-down"></i></span>
            <ul>
                <li>USD</li>
                <li>EUR</li>
                <li>USD</li>
            </ul>
        </div>
    </div>
    <div class="offcanvas__nav__option">
        <a href="#" class="search-switch"><%= image_tag "icon/search.png" %></a>
        <a href="#"><%= image_tag "icon/heart.png" %></a>
        <%= link_to "image_tag 'icon/cart.png'", carts_path %>
        <div class="price">$0.00</div>
    </div>
    <div id="mobile-menu-wrap"></div>
    <div class="offcanvas__text">
        <p>Free shipping, 30-day return or refund guarantee.</p>
    </div>
</div>
<!-- Offcanvas Menu End -->

<!-- Header Section Begin -->
<header class="header">
    <div class="header__top">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-7">
                    <div class="header__top__left">
                        <p><%= t("header.ad") %></p>
                    </div>
                </div>
                <div class="col-lg-6 col-md-5">
                    <div class="header__top__right">
                        <div class="header__top__links">
                             <% if user_signed_in? %>
                  
                    <%= link_to t("auth.Sign Out"), destroy_user_session_path, method: :delete %>
                  
                <% else %>
                  
                    <%= link_to t("auth.Sign Up"), new_user_registration_path %>
                 
                 
                    <%= link_to t("auth.Sign In"), new_user_session_path %>
                  
                <% end %>        
                            <a href="#"><%= t("header.faq") %></a>
                        </div>
                        <div class="header__top__hover">
                            <span><%= t("header.language")%> <i class="arrow_carrot-down"></i></span>
                            <ul>
                            <% if current_page?(locale: :en) %>
                                <li><%= link_to "ENG", locale: :gu %></li>
                                <% else %>
                                <li><%= link_to "GUJ", locale: :en %></li>
                                <% end %>
                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <div class="header__logo">
                    <a <%= link_to image_tag("logo.png"), root_path %></a>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <nav class="header__menu mobile-menu">
                    <ul>
                        <li class="active"><%= link_to t("header.home"), root_path %> </li>
                        <li> <%= link_to t("header.shop"), products_path %></li>
                        <li><a href="#"><%= t("header.page")%></a>
                            <ul class="dropdown">
                               <li><%= link_to t("header.about_us"), about_path %></li>
                                <li><%= link_to t("header.shop"), products_path %></li>
                                <li><%= link_to t("header.cart"), carts_path %></li>
                                <li><%= link_to t("header.check_out"), orders_path %></li>
                                <li><%= link_to t("header.blog"), blogs_path  %></li>
                            </ul>
                        </li>
                        <li><%= link_to t("header.blog"), blogs_path %></li>
                        
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3 col-md-3">
                <div class="header__nav__option">
                    <a href="#" class="search-switch"><%= image_tag "icon/search.png" %></a>
                    <a href="#"><%= image_tag "icon/heart.png" %></a>
                    <a href="#"><%=link_to image_tag("icon/cart.png"), carts_path %> <span></span></a>
                </div>
            </div>
        </div>
        <div class="canvas__open"><i class="fa fa-bars"></i></div>
    </div>
</header>
<!-- Header Section End -->